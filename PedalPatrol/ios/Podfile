target 'PedalPatrol' do
  # Uncomment the next line if you're using Swift or would like to use dynamic frameworks
  # use_frameworks!

  # Pods for PedalPatrol
  # Required by RNFirebase
  pod 'Firebase/Core', '~> 5.15.0'
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
  pod 'Firebase/Auth'
  pod 'Firebase/Messaging'

  target 'PedalPatrol-tvOSTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'react-native-twitter-signin', :path => '../node_modules/react-native-twitter-signin'

    pod 'react-native-fbsdk', :path => '../node_modules/react-native-fbsdk'

  end

  target 'PedalPatrolTests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'PedalPatrol-tvOS' do
